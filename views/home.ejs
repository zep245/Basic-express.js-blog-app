<% posts.forEach(post => { %>
  <div class="mx-auto max-w-screen-xl px-2 py-3 sm:px-6 sm:py-4 lg:px-3">
    <article class="rounded-xl border-2 border-gray-100 bg-white">
        <div class="flex items-start gap-4 p-4 sm:p-6 lg:p-8">
          <a href="#" class="block shrink-0">
            <img
              alt=""
              src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8YXZhdGFyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60"
              class="size-14 rounded-lg object-cover"
            />
          </a>
      
          <div>
            <h3 class="font-medium sm:text-lg">
              <a href="#" class="hover:underline"><%= post.title%></a>
            </h3>
      
            <p class="line-clamp-2 text-sm text-gray-700">
              <%= post.content %>
            </p>
      
            <div class="mt-2 sm:flex sm:items-center sm:gap-2">
                <span class="inline-flex -space-x-px overflow-hidden rounded-md border bg-white shadow-sm">
                    <a
                      href="/posts/update/<%= post.id%>"
                      class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative"
                    >
                      Edit
                  </a>
                  
                    <a
                      href="/posts/view_content/<%= post.id%>"
                      class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative"
                    >
                      View
                    </a>
                    
                    <form action="/posts/delete/<%= post.id%>?_method=DELETE" method="POST">
                      <button type="submit" class="inline-block px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:relative">Delete</button>
                    </form>
                  </span>
              </div>
      
              <p class="hidden sm:block sm:text-xs sm:text-gray-500 my-1">
                Posted by
                <a href="#" class="font-medium underline hover:text-gray-700"> John </a>
              </p>
            </div>
          </div>
        </div>
        </div>
      </article>
</div>
<% }); %>